#!/bin/sh
# find . -type f | xargs -I {} ffmpeg -i '{}' -vcodec libx265 -acodec libopus -b:a 128k -crf 24 '{}_smol.mkv'
# find . -type f | grep "mkv\|mp4" | grep -v "smol" | sort | xargs -I {} ffmpeg -i '{}' -vcodec libx265 -acodec libopus -b:a 128k -crf 24 '{}_smol.mkv'
ffmpeg -i "$1" -vcodec libx265 -acodec libopus -b:a 128k -crf 24 "$(echo "$1" | rev | cut -d. -f2- | rev)_smol.mkv"
