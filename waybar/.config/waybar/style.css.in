* {
    font-family: Source Code Pro;
    font-size: 14px;
    border-radius: 0px;
    min-height: 0px;

    animation: none;
    transition: none;
}

window#waybar {
    background-color: @BAR_BG@;
    color: @BAR_FG@;
}

#tags button, #workspaces button {
    padding: 0 8px; /* One space character's width */
    min-width: unset;
    background-color: @WS_EMPTY_TEXT_BG@;
    color: @BAR_FG@;
    border: 0;
}

/* Empty tags after the first 6 are not shown */
#tags button:nth-child(n+7) {
    color: rgba(0,0,0,0);
    background: none;
    box-shadow: none;
    border: none;
    margin-right: -1000px; /* Move the extra space offscreen, just to be safe */
}

#tags button.occupied, #workspaces button {
    background-color: @WS_INACTIVE_TEXT_BG@;
    color: @WS_INACTIVE_TEXT_FG@;
    margin: 0px;
}
#workspaces button.persistent {
    background-color: @WS_EMPTY_TEXT_BG@;
    color: @WS_EMPTY_TEXT_FG@;
    margin: 0px;
}
#tags button.focused, #workspaces button.focused {
    background-color: @WS_FOCUSED_TEXT_BG@;
    color: @WS_FOCUSED_TEXT_FG@;
    margin: 0px;
}
#tags button.urgent, #workspaces button.urgent {
    background-color: @WS_URGENT_TEXT_BG@;
    color: @WS_URGENT_TEXT_FG@;
    margin: 0px;
}

#mode {
    padding: 0 8px 0 8px; /* One space character's width */
    background-color: @WS_BINDING_TEXT_BG@;
    color: @WS_BINDING_TEXT_FG@;
}

#window {
    padding-left: 8px; /* One space character's width */
}


#custom-sway-tree {
    background-color: @BLOCK_COLOR@;
}

#custom-cmus {
    background-color: @BLOCK_ALT_COLOR@;
}

#tray {
    padding-left: 8px;
    background-color: @BLOCK_COLOR@;
}

#cpu,
#custom-memory,
#custom-separator,
#pulseaudio,
#battery {
    background-color: @BLOCK_COLOR@;
}

#battery.warning:not(.charging) {
    color: @STATUS_WARN@;
}
#battery.critical:not(.charging) {
    color: @STATUS_BAD@;
}

#clock {
    background-color: @ACCENT_BG@;
    color: @ACCENT_FG@;
}
